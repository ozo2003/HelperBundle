{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}
    {% set sludio_helper_position = positionObject(object) %}

    {% if sludio_helper_position < admin.last_position %}
        <a class="btn btn-sm btn-default" href="{{ admin.generateObjectUrl('move', object, {'position': 'bottom'}) }}">
            ⇊
        </a>
    {% else %}
        <a class="btn btn-sm btn-default" disabled href="javascript:;">
            ⇊
        </a>
    {% endif %}

    {% if sludio_helper_position < admin.last_position %}
        <a class="btn btn-sm btn-default" href="{{ admin.generateObjectUrl('move', object, {'position': 'down'}) }}">
            ↓
        </a>
    {% else %}
        <a class="btn btn-sm btn-default" disabled href="javascript:;">
            ↓
        </a>
    {% endif %}

    {% if sludio_helper_position > 0 %}
        <a class="btn btn-sm btn-default" href="{{ admin.generateObjectUrl('move', object, {'position': 'up'}) }}">
            ↑
        </a>
    {% else %}
        <a class="btn btn-sm btn-default" disabled href="javascript:;">
            ↑
        </a>
    {% endif %}

    {% if sludio_helper_position > 0 %}
        <a class="btn btn-sm btn-default" href="{{ admin.generateObjectUrl('move', object, {'position': 'top'}) }}">
            ⇈
        </a>
    {% else %}
        <a class="btn btn-sm btn-default" disabled href="javascript:;">
            ⇈
        </a>
    {% endif %}
{% endif %}
